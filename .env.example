# ===============================
# Application
# ===============================
PORT=5000
NODE_ENV=development
APP_NAME=LexScripta

# ===============================
# AI Configuration
# ===============================
# Set to true ONLY if you add a real API key
USE_REAL_AI=false

# OpenAI (optional)
OPENAI_API_KEY=

# Claude / Anthropic (optional)
ANTHROPIC_API_KEY=

# ===============================
# File Upload Settings
# ===============================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,docx,jpg,jpeg,png

# ===============================
# Security & Rate Limiting
# ===============================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# ===============================
# CORS
# ===============================
CORS_ORIGIN=http://localhost:3000

# ===============================
# Logging
# ===============================
LOG_LEVEL=dev
